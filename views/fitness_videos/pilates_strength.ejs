<%- include('../partials/header') %>

<style>
    .fitness-video-container {
        background-color: #F2EFE7;
        min-height: calc(100vh - 60px);
        color: #006A71;
        padding: 20px;
    }
    
    .page-header {
        text-align: center;
        margin-bottom: 30px;
    }
    
    .page-header h1 {
        color: #006A71;
        font-size: 28px;
        font-weight: bold;
        margin-bottom: 10px;
    }
    
    .page-header p {
        color: #48A6A7;
        font-size: 16px;
    }
    
    .back-link {
        display: inline-block;
        margin-bottom: 20px;
        color: #006A71;
        text-decoration: none;
        font-weight: 500;
    }
    
    .back-link:hover {
        text-decoration: underline;
    }
    
    .video-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
        justify-content: center;
        padding: 10px;
        max-width: 1200px;
        margin: 0 auto;
    }
    
    .video {
        display: flex;
        flex-direction: column;
        align-items: center;
        background-color: #9ACBD0;
        border-radius: 10px;
        padding: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s;
    }
    
    .video:hover {
        transform: translateY(-5px);
    }
    
    iframe {
        width: 100%;
        height: auto;
        aspect-ratio: 16 / 9;
        border-radius: 8px;
        border: none;
    }
    
    .video p {
        margin-top: 10px;
        color: #006A71;
        font-weight: 500;
        text-align: center;
    }
    
    @media (max-width: 600px) {
        .video-container {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="fitness-video-container">
    <a href="/fitness-hub" class="back-link">‚Üê Back to Fitness Hub</a>
    
    <div class="page-header">
        <h1>Pilates and Strength Training</h1>
        <p>Build core strength and improve flexibility with these Pilates workouts</p>
    </div>
    
    <div class="video-container" id="playlist"></div>
</div>

<script>
    const playlistId = "PLnG92tcrtk49r9k3jpLaeX4wKDPyYwyII"; 
    const apiKey = "AIzaSyAjkmmzGm9CO5EUbXLD9PiYA2_O8FdcsSM";
    
    async function fetchPlaylist() {
        try {
            const url = `https://www.googleapis.com/youtube/v3/playlistItems?part=snippet&maxResults=50&playlistId=${playlistId}&key=${apiKey}`;
            const response = await fetch(url);
            const data = await response.json();
            
            if (data.error) {
                throw new Error(data.error.message);
            }
            
            displayVideos(data.items);
        } catch (error) {
            console.error("Error fetching playlist:", error);
            document.getElementById("playlist").innerHTML = `
                <div style="grid-column: 1 / -1; text-align: center; padding: 20px;">
                    <p>Sorry, we couldn't load the videos at this time. Please try again later.</p>
                    <p>Error: ${error.message}</p>
                </div>
            `;
        }
    }

    function displayVideos(videos) {
        const playlistContainer = document.getElementById("playlist");
        
        if (!videos || videos.length === 0) {
            playlistContainer.innerHTML = `
                <div style="grid-column: 1 / -1; text-align: center; padding: 20px;">
                    <p>No videos found in this playlist.</p>
                </div>
            `;
            return;
        }
        
        playlistContainer.innerHTML = videos.map(video => {
            const videoId = video.snippet.resourceId.videoId;
            const title = video.snippet.title;
            return `<div class="video">
                        <iframe src="https://www.youtube.com/embed/${videoId}" 
                                title="${title}" 
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
                                allowfullscreen></iframe>
                        <p>${title}</p>
                    </div>`;
        }).join("");
    }

    // Load videos when the page is ready
    document.addEventListener('DOMContentLoaded', fetchPlaylist);
</script>

